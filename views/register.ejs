<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-500 bg-center bg-cover flex items-center justify-center px-4 py-10">
        <div
            class="w-full max-w-md sm:max-w-lg lg:max-w-xl bg-zinc-100 py-10 px-6 sm:px-10 md:px-14 rounded-[30px] shadow-xl">
            <h1 class="text-2xl sm:text-3xl mb-8 text-center font-semibold text-zinc-700 tracking-tight capitalize">
                Create New Account
            </h1>

            <form action="/register" method="post" class="space-y-4">
                <input
                    class="border border-zinc-300 rounded-md w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500"
                    type="text" name="username" placeholder="Username" required>
                <input
                    class="border border-zinc-300 rounded-md w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500"
                    type="text" name="fullname" placeholder="Full Name" required>
                <input
                    class="border border-zinc-300 rounded-md w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500"
                    type="email" name="email" placeholder="Email" required>
                <input
                    class="border border-zinc-300 rounded-md w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500"
                    type="number" name="contact" placeholder="Contact" required inputmode="numeric" pattern="[0-9]*"
                    onwheel="this.blur()">
                <input
                    class="border border-zinc-300 rounded-md w-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-red-500"
                    type="password" name="password" placeholder="Password" required>

                <button type="submit"
                    class="w-full py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-full transition duration-200">
                    Create New Account
                </button>
            </form>

            <p class="text-xs font-medium text-zinc-700 mt-6 text-center px-4">
                By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy.
            </p>

            <a href="/" class="block mt-6 text-sm font-semibold text-red-600 text-center hover:underline">
                Login to Existing Account
            </a>
        </div>
    </div>

    <% include ./partials/footer.ejs %>
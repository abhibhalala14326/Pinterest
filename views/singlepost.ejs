<% include ./partials/header.ejs %>

    <div class="min-h-screen bg-zinc-100 flex justify-center items-start py-10 px-4">
        <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-5 sm:p-8">

            <img src="/images/uploads/<%= post.image %>" alt="Post Image"
                class="w-full h-auto rounded-xl object-cover mb-4" />

            <h2 class="text-xl sm:text-2xl font-semibold text-zinc-800 mb-3 break-words">
                <%= post.title %>
            </h2>

            <p class="text-zinc-600 text-sm sm:text-base mb-5 break-words leading-relaxed">
                <%= post.description %>
            </p>

            <div class="text-xs sm:text-sm text-zinc-500">
                <p>Posted by: <strong class="text-zinc-700">
                        <%= post.user.name %>
                    </strong></p>
            </div>

        </div>
    </div>

    <% include ./partials/footer.ejs %>